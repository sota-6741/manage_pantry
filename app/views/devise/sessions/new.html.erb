<% content_for :head do %>
  <%= stylesheet_link_tag "login", "data-turbo-track": "reload" %>
<% end %>

<div class="login-container">
  <section class="login-background">
    <article class="login-card">
      <div class="login-logo-wrapper" style="margin-top: 32px;">
        <%= image_tag "login_page/app_icon.png", alt: "Manage Pantory アプリケーションアイコン", class: "login-app-icon" %>
      </div>

      <%= button_to user_google_oauth2_omniauth_authorize_path, data: { turbo: false }, class: "google-login-button", aria: { label: t("views.sessions.new.google_login") } do %>
        <%= image_tag "login_page/google_icon.png", alt: "Google ロゴ", class: "google-icon" %>
        <span class="google-button-text"><%= t("views.sessions.new.google_login") %></span>
      <% end %>

      <footer class="login-footer">
        <p class="login-policy-text">
          ログインすることで、利用規約とプライバシーポリシーに同意したものとみなされます
        </p>
      </footer>
    </article>
  </section>
</div>
