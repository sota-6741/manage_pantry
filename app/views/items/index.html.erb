<%# ヘッダー %>
<header class="px-4 pt-8 pb-6">
  <div>
    <h1 class="font-['Outfit'] text-3xl font-medium tracking-tight text-green-700 mb-2">Manage Pantory</h1>
    <p class="font-sans text-base text-zinc-600">家の食材在庫管理</p>
  </div>
</header>

<%# カテゴリー管理とアイテム一覧 %>
<div class="px-4 mb-8">
  <%= form_tag items_path, method: :get, class: "flex flex-col gap-3 p-4 bg-white border border-gray-100 rounded-xl shadow-sm" do %>
    <%# カテゴリー選択プルダウンメニュー %>
    <div class="relative w-full h-10">
      <%= select_tag :category_id, options_from_collection_for_select(@categories, :id, :name, params[:category_id]), 
          include_blank: "すべてのカテゴリー", 
          class: "w-full h-10 px-3 font-sans text-base text-zinc-900 bg-white border border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500",
          onchange: "this.form.submit();" %>
    </div>
    <%# カテゴリー追加ボタン %>
    <button type="button" class="flex items-center justify-center w-full h-10 gap-2 font-sans text-base font-medium text-white bg-green-500 rounded-lg shadow-sm transition hover:bg-green-600 active:scale-95">
      <%= image_tag 'add_icon.png', size: '20x20', class: 'object-contain', alt: '追加' %>
      <span>カテゴリー追加</span>
    </button>
  <% end %>
  <%# アイテム追加ボタン %>
  <div class="flex mt-3">
    <%= link_to new_item_path, class: "flex items-center h-10 gap-2 px-6 font-sans text-base font-medium text-white bg-green-500 rounded-lg shadow-sm transition hover:bg-green-600 active:scale-95" do %>
      <%= image_tag 'add_icon.png', size: '20x20', class: 'object-contain', alt: '追加' %>
      <span>アイテム追加</span>
    <% end %>
  </div>
</div>

<%# アイテムリストセクション %>
<div class="px-4 pb-10">
  <div class="bg-white rounded-xl shadow-sm">
    <% if @items.any? %>
      <div class="flex flex-col gap-4 p-4">
        <% @items.each do |item| %>
          <%= render partial: "items/item_card", locals: { item: item } %>
        <% end %>
      </div>
    <% else %>
      <div class="flex flex-col items-center justify-center min-h-[25vh] gap-8 p-8 text-center text-[#6A7282]">
        <%= image_tag 'stock_icon_2.png', size: '48x48', class: 'object-contain opacity-40', alt: 'Empty State' %>
        <p class="font-sans text-xl font-medium">在庫アイテムがありません</p>
      </div>
    <% end %>
  </div>
</div>
