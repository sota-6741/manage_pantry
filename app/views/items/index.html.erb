<div style="background-image: linear-gradient(114.78856297515668deg, rgb(240, 253, 244) 0%, rgb(255, 255, 255) 100%), linear-gradient(90deg, rgb(255, 255, 255) 0%, rgb(255, 255, 255) 100%)">
  <div>
    <div>
      
      <%# Header %>
      <div>
        <div>
          <p>
            Manage Pantory
          </p>
        </div>
        <div>
          <p>
            家の食材在庫管理
          </p>
        </div>
      </div>

      <%# Category Manager %>
      <div>
        <%= render "categories/selector", categories: @categories %>
      </div>

      <%# Add Item Button %>
      <div>
        <%= link_to new_item_path do %>
          <span>アイテム追加</span>
        <% end %>
      </div>

      <%# Inventory List %>
      <div>
        <% if @items.any? %>
          <div>
            <%= render @items %>
          </div>
        <% else %>
          <div>
            <p>
              在庫アイテムがありません
            </p>
          </div>
        <% end %>
      </div>

    </div>
  </div>
</div>
