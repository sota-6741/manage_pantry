<div class="bg-white rounded-xl overflow-hidden shadow-sm border border-gray-100 flex flex-col items-start min-h-[176px]">
  <div class="w-full pl-5 pr-4 pt-4 pb-4 flex flex-col gap-3 border-l-4 <%= highlight ? 'border-red-500' : 'border-gray-100' %>">

    <%# アイテム名 %>
    <div class="flex justify-between items-start">
      <h3 class="text-neutral-950 text-lg font-medium font-sans leading-7"><%= item.name %></h3>
    </div>

    <%# 詳細情報 %>
    <div class="flex flex-col gap-2">
      <%# カテゴリー %>
      <div class="flex items-center gap-2">
        <%= image_tag 'tag_icon.png', size: '16x16', class: 'object-contain', alt: 'カテゴリー' %>
        <span class="text-gray-600 text-sm font-normal font-sans">
          <%= item.category&.name || "未分類" %>
        </span>
      </div>

      <%# ストック数 %>
      <div class="h-14 px-3 bg-gray-50 rounded-lg flex justify-between items-center gap-2">
        <div class="flex items-center gap-2 shrink-0">
          <%= image_tag 'stock_icon.png', size: '20x20', class: 'object-contain', alt: '在庫' %>
          <span class="text-gray-700 text-lg font-bold font-sans">
            <%= item.display_quantity %>
          </span>
        </div>

        <div class="flex items-center gap-1">
          <%= button_to item_stock_adjustments_path(item, stock_adjustment: { amount: 1, reason: "purchase" }), method: :post, class: "h-8 px-3 bg-green-500 rounded-lg flex items-center gap-1 shadow-sm active:scale-95 transition-transform text-white text-sm font-medium font-sans cursor-pointer border-none" do %>
            <%= image_tag 'edit_icon.png', size: '16x16', class: 'object-contain', alt: '編集' %>
            <span>変更</span>
          <% end %>
        </div>
      </div>

      <%# 賞味期限 %>
      <div class="flex items-center gap-2">
        <%= image_tag 'expiration_date_icon.png', size: '16x16', class: 'object-contain', alt: '期限' %>
        <span class="<%= highlight ? 'text-red-500 font-semibold' : 'text-gray-600 font-normal' %> text-sm font-sans"><%= item.expiration_date.strftime("%Y-%m-%d") %></span>
      </div>
    </div>
  </div>
</div>
