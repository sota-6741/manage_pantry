<div id="<%= dom_id(item) %>">
  <div>

    <%# アイテム名 %>
    <div>
      <h3><%= link_to item.name, item_path(item) %></h3>
    </div>

    <%# 詳細情報 %>
    <div>
      <%# カテゴリー %>
      <div>
        <span>
          <%= item.category&.name || "未分類" %>
        </span>
      </div>

      <%# ストック調整フレーム (差し替え対象) %>
      <%= turbo_frame_tag dom_id(item, :adjustment) do %>
        <%= render "stock_adjustments/stock", item: item %>
      <% end %>

      <%# 賞味期限 %>
      <div>
        <span><%= item.expiration_date.strftime("%Y-%m-%d") %></span>
      </div>
    </div>
  </div>
</div>