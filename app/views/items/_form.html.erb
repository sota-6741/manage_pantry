<% if local_assigns[:title] %>
  <h2><%= title %></h2>
<% end %>

<%= form_with(model: item) do |f| %>
  <div>
    <%# Item Name %>
    <div>
      <%= f.label :name, t('activerecord.attributes.item.name') %>
      <%= f.text_field :name, placeholder: t('views.items.form.placeholders.name') %>
    </div>

    <%# Quantity (only for new records if needed) %>
    <% if local_assigns[:show_quantity] %>
      <div>
        <%= f.label :quantity, t('activerecord.attributes.item.quantity') %>
        <%= f.number_field :quantity, placeholder: "1" %>
      </div>
    <% end %>

    <%# Expiration Date %>
    <div>
      <%= f.label :expiration_date, t('activerecord.attributes.item.expiration_date') %>
      <%= f.date_field :expiration_date %>
    </div>

    <%# Category %>
    <div>
      <%= f.label :category_id, t('activerecord.attributes.item.category_id') %>
      <%= f.collection_select :category_id, categories, :id, :name, { include_blank: t('views.items.form.select_category') } %>
    </div>
  </div>

  <%# Action Buttons %>
  <div>
    <%= f.submit submit_label %>
    <%= link_to t('views.common.cancel'), cancel_path, data: local_assigns[:cancel_data] %>
  </div>
<% end %>
